{
  "devDependencies": {
    "css-loader": "^7.1.2",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  },
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "dev": "webpack serve --config webpack.dev.js",
    "deploy": "git subtree push --prefix dist origin gh-pages",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "eslintConfig": {
    "extends": ["wesbos"],
    "rules": {
      "no-restricted-syntax": 0,
      "quotes": ["error", "double"],
      "prettier/prettier": [
        "error",
        {
          "doubleQuote": true,
          "endOfLine": "auto",
          "tabWidth": 2
        }
      ]
    }
  },
  "dependencies": {
    "eslint-config-wesbos": "^4.3.2"
  }
}
